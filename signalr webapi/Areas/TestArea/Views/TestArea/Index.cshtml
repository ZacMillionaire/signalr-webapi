@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-2.2.0.min.js" type="text/javascript"></script>
<script src="~/Scripts/jquery.signalR-2.2.0.min.js" type="text/javascript"></script>
<script src="signalr/hubs" type="text/javascript"></script>

<h2>Index</h2>

<script type="text/javascript">

    $(function () {
        var otherHub = $.connection.hubHubHub; // to reference by signalR hub by attribute HubName use uppercase
        
        $.connection.hub.start();

        otherHub.client.onConnected = function (message) {
            console.log(message);
        };

        otherHub.client.getMessage = function (message) {
            console.log(message);
            alert();
        };

        $.connection.hub.start().done(function () {
            otherHub.server.connect();
        });
    });


</script>